<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .section-label {
            text-align: left;
        }
    </ui:style>

    <g:HTMLPanel styleName="web-protege-laf">

        <table width="95%">
            <col width="100px" align="right"/>
            <tr>
                <td align="right">
                    <g:Label text="Owner" styleName="web-protege-form-label" addStyleNames="web-protege-form-layout-editor-input"/>
                </td>
                <td valign="top">
                    <g:TextBox ui:field="ownerField" width="100%" addStyleNames="web-protege-form-layout-editor-input"/>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <g:Label text="Vak/leergebied" addStyleNames="web-protege-form-label web-protege-form-layout-editor-input"/>
                </td>
                <td valign="top">
                    <g:TextBox ui:field="courseField" width="100%" addStyleNames="web-protege-form-layout-editor-input"/>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <g:Label text="Leerniveau" addStyleNames="web-protege-form-label web-protege-form-layout-editor-input"/>
                </td>
                <td valign="top">
                    <g:TextBox ui:field="levelField" width="100%" addStyleNames="web-protege-form-layout-editor-input"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>